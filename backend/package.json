{
  "name": "fyp-backend",
  "version": "0.0.1",
  "description": "Clisha Review Backend",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/main.js",
    "start:dev": "nest start -w",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "prisma:studio": "npx prisma studio",
    "prisma:generate": "npx prisma generate",
    "prisma:generate:watch": "npx prisma generate --watch",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:seed": "prisma db seed",
    "db:dev:stop": "docker compose rm fyp-db -s -f -v",
    "db:dev:start": "docker compose up fyp-db -d",
    "db:dev:restart": "npm run db:dev:stop && npm run db:dev:start && sleep 5 && npm run prisma:migrate:dev",
    "redis:dev:stop": "docker compose rm fyp-redis -s -f -v",
    "redis:dev:start": "docker compose up fyp-redis -d",
    "redis:dev:restart": "npm run redis:dev:stop && npm run redis:dev:start",
    "services:dev:start": "docker compose up fyp-db fyp-redis -d",
    "services:dev:stop": "docker compose rm fyp-db fyp-redis -s -f -v",
    "services:dev:restart": "npm run services:dev:stop && npm run services:dev:start && sleep 5 && npm run prisma:migrate:dev",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky",
    "postinstall": "npm run prisma:generate && npm run prisma:migrate:deploy"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.682.0",
    "@aws-sdk/credential-provider-node": "^3.682.0",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/bull": "^10.2.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^11.0.10",
    "@nestjs/schedule": "^4.1.1",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/websockets": "^11.0.10",
    "@prisma/client": "^5.20.0",
    "@types/qrcode": "^1.5.5",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.4",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.7",
    "csv-writer": "^1.6.0",
    "dayjs": "^1.11.13",
    "device-detector-js": "^3.0.3",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "express-useragent": "^1.0.15",
    "geoip-lite": "^1.4.10",
    "google-auth-library": "^9.15.1",
    "googleapis": "^144.0.0",
    "handlebars": "^4.7.8",
    "morgan": "^1.10.0",
    "nestjs-prisma": "^0.23.0",
    "nodemailer": "^6.9.15",
    "otplib": "^12.0.1",
    "passport": "^0.7.0",
    "passport-google-oauth2": "^0.2.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pm2": "^5.4.3",
    "qrcode": "^1.5.4",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "ua-parser-js": "^2.0.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8",
    "zod-form-data": "^2.0.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@swc/cli": "^0.5.0",
    "@swc/core": "^1.9.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.2",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.16.7",
    "@types/nodemailer": "^6.4.16",
    "@types/passport-google-oauth2": "^0.1.10",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.0.0",
    "prisma": "^5.20.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint  --fix",
      "prettier --write --ignore-unknown"
    ]
  }
}
